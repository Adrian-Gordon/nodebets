{	
	"$schema":"http://json-schema.org/draft-04/schema#",
	"id":"http://dimplecds.com/raceschema.json",
	"type":"object",
	"properties":{
		"_id":{"type":"string", "minLength": 6, "maxLength": 6},
		"conditions":{"type":"array",
					  "items":{
					  	"oneOf":[{
						  		"type":"object",
							  	"properties":{
							  		"conditiontype":{
							  			"type":"string",
							  			"enum":["distance"]
							  		},
							  		"miles":{
							  			"type":"number"
							  		},
							  		"furlongs":{
							  			"type":"number"
							  		},
							  		"yards":{
							  			"type":"number"
							  		}
							  	}
					  			},
					  			{
						  		"type":"object",
							  	"properties":{
							  		"conditiontype":{
							  			"type":"string",
							  			"enum":["conditions"]
							  		},
							  		"ageconditions":{
							  			"type":"object",
							  			"properties":{
							  				"lower":{
							  					"type":"number"
							  				},
							  				"upper":{
							  					"type":"number"
							  				}
							  			}
							  		}
							  	}
					  			},
					  			{
						  		"type":"object",
							  	"properties":{
							  		"conditiontype":{
							  			"type":"string",
							  			"enum":["going"]
							  		},
							  		"going":{
							  			"type":"string",
							  			"enum":["Fast","Good"]
							  		}
							  	}
					  			}
						  	
						]
					  }
					},
		"date":{
			"type":"string",
			"format":"date-time"
		},
		"distance":{
			"type":"number"
		},
		"going":{
			"type":"string",
			"enum":["Fast","Good"]
		},
		"iscomplete":{
			"type":"boolean"
		},
		"meeting":{
			"type":"string",
			"pattern":"^[A-Z\\s]+$"
		},
		"offtime":{
			"type":"string"
		},
		"racetype":{
			"type":"string",
			"enum":["FLAT","HURDLE","CHASE"]
		},
		"runners":{
			"type":"array",
			"items":{
				"type":"string",
				"minLength": 6, 
				"maxLength": 6

			}
		},
		"surface":{
			"type":"string",
			"enum":["AW", "TURF"]
		},
		"winningtime":{
			"type":"number"
		}
	}
}